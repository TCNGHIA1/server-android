{{>header}}

<table class="table table-sm table-bordered">
  <h5>Danh sách nhân viên</h5>
  <thead class="table-info">
    <tr class="text-uppercase text-center">
      <th>Hình ảnh</th>
      <th>Họ và tên</th>
      <th>Email</th>
      <th>Mật khẩu</th>
      <th>Hành động</th>
    </tr>
  </thead>

  {{#each users}}
  <tr class="align-middle">
    <td class="align-center">{{#if this.imageURL}}<img src="/img/users/{{this.imageURL}}" width="80" /> {{else}}
      <img src="/img/no_image.png" width="80" />
      {{/if}}
    </td>
    <td class="align-center">{{this.fullname}}</td>
    <td>{{this.email}}
    </td>
    <td>{{this.password}}</td>
    <td>
      <div class="d-flex justify-content-around">
        <a href="/users/edit/{{this._id}}" class="btn btn-success btn-sm">Sửa</a>
        <a href="/users/delete/{{this._id}}" class="btn btn-danger btn-sm">Xóa</a>
      </div>
    </td>
  </tr>
  {{/each}}

</table>
<!--END FORM-->
{{>footer}}